<!-- Password modal -->
<div class="modal fade" id="passwordChangeModal" tabindex="-1" role="dialog" aria-labelledby="passwordChangeModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="passwordChangeModalLabel">Alterar Senha</h4>
            </div>
            <!--/.modal-header-->

            <div class="modal-body">
                <div id="div-reset-msg">
                    <div id="icon-reset-msg" class="glyphicon glyphicon-chevron-right"></div>
                    <span id="text-reset-msg">Insira sua senha atual, e sua nova senha.</span>
                </div>

                <form id="updatePasswordForm">
                    <div class="form-group">
                        <label for="current_pass">Senha Atual:</label>
                        <input class="form-control" type="password" name="current_pass" id="current_pass" oninvalid="this.setCustomValidity('Insira sua senha atual.')"
                            oninput="setCustomValidity('')" required>
                    </div>

                    <div class="form-group">
                        <label for="new_pass">Nova Senha:</label>
                        <input class="form-control" type="password" name="new_pass" id="new_pass" oninvalid="this.setCustomValidity('Insira sua nova senha.')"
                            oninput="setCustomValidity('')" required>
                    </div>

                    <div class="form-group">
                        <label for="confirm_pass">Confirmar Senha:</label>
                        <input class="form-control" type="password" name="confirm_pass" id="confirm_pass" oninvalid="this.setCustomValidity('Redigite a senha senha.')"
                            oninput="setCustomValidity('')" required>
                        <span id="confirmMessage" class="confirmMessage"></span>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                        <button type="submit" name="submit" class="btn btn-primary" id="btnSavePassword" value="Save changes">Salvar</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
<!-- / Password modal -->